{
    "manifest_version": 3,
    "name": "multiple_roles",
    "description": "chrome extension",
    "version": "0.0.1",
    "incognito":"split",
    "devtools_page": "devtools.html",
    "permissions": [
        "storage",
        "activeTab",
        "scripting",
        "tabs",
        "nativeMessaging",
        "windows",
        "debugger",
        "cookies",
        "webRequest",
        "declarativeNetRequest", 
        "declarativeNetRequestWithHostAccess"
      ],
    "action": {
        "default_popup": "popup.html"
    },
    "background": {
        "service_worker": "background.js"
    },
    "host_permissions": [
        "http://*/*",
        "https://*/*"
    ],
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ]
        }
    ]
}
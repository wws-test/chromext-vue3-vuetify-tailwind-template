{
    "manifest_version": 3,
    "name": "multiple_roles",
    "description": "chrome extension",
    "version": "0.0.1",
    "incognito":"split",
    "permissions": [
        "storage",
        "activeTab",
        "scripting",
        "tabs",
        "nativeMessaging",
        "windows",
        "debugger",
        "cookies",
        "webRequest",
        "declarativeNetRequest"
      ],
    "action": {
        "default_popup": "popup.html"
    },
    "background": {
        "service_worker": "background.js"
    },
    "host_permissions": [
        "http://*/*",
        "https://*/*"
    ],
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ]
        }
    ],
    "declarative_net_request": {
        "rule_resources": [
          {
            "id": "block_rule",
            "enabled": true,
            "rule": {
              "action": {
                "type": "allow"
              },
              "condition": {
                "urlFilter": ".*"
              }
            }
          }
        ]
      }
}